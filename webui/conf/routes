#VM
GET     /demo/vm                         controllers.demo.vm.VMController.list(fure: java.lang.Boolean)
GET     /demo/vm/new                     controllers.demo.vm.VMController.create()
POST    /demo/vm/new                     controllers.demo.vm.VMController.doCreate()
